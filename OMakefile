USE_OCAMLFIND = true
NATIVE_ENABLED = true
BYTE_ENABLED = true

ENDIANNESS = LITTLE_ENDIAN

OCAMLDEPFLAGS = -pp "camlp4orf -D$(ENDIANNESS)"
OCAMLFLAGS = -dtypes -pp "camlp4orf -D$(ENDIANNESS)" -w A -warn-error A
OCAMLOPTFLAGS = -S -inline 100
OCAMLCFLAGS += -g
OCAMLINCLUDES[] += $(ROOT)/runtime

OCAMLPACKS[] =
	camlp4
	extlib

CamlSources(mods) =
	foreach(mod, $(mods))
		$(addsuffixes .cmo .cmi .cmx .sig $(EXT_OBJ), $(mod)):

CamlTargets(mod) =
	return($(addsuffixes .cmo .cmi .cmx .o, $(mod)))

.SUBDIRS: compiler runtime test

%.sig: %.ml %.cmo
	$(OCAMLFIND) $(OCAMLC) -package $(concat \,, $(OCAMLPACKS)) \
	    $(mapprefix -I, $(OCAMLINCLUDES)) \
	    $(OCAMLFLAGS) $(OCAMLCFLAGS) -i $< > $@

extprotc: compiler/extprotc
	cp $^ $@

.PHONY: clean
clean:
	rm -f $(filter-proper-targets $(ls R, .)) *.s *.annot

